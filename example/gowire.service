[Unit]
Description=Gobind for wireshark
After=network.target

[Service]
ExecStart=/usr/local/bin/gowire -f example.pcap
ExecStop=/bin/kill ${MAINPID}
Restart=on-failure
RestartSec=10s
Type=simple

[Install]
WantedBy=multi-user.target
